   "source": [
    "prompt=\"\\nTell me something, and I will repeat it back to you: \"\n",
    "prompt+=\"\\nEnter 'quit' to end the program.\"\n",
    "\n",
    "message=\"\"\n",
    "while message!='quit':\n",
    "    message = input(prompt)    \n",
    "    if message!='quit':\n",
    "        print(message)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "prompt=\"\\nTell me something, and I will repeat it back to you: \"\n",
    "prompt+=\"\\nEnter 'quit' to end the program.\"\n",
    "\n",
    "active=True\n",
    "\n",
    "while active:\n",
    "    message = input(prompt)   \n",
    "    \n",
    "    if message=='quit':\n",
    "        active=False\n",
    "    else:\n",
    "        print(message)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "prompt=\"\\nPlease enter the name of the city you have visited: \"\n",
    "prompt+=\"\\n (Enter quit when you are finished.)\"\n",
    "\n",
    "while True:\n",
    "    city=input(prompt)\n",
    "    \n",
    "    if city =='quit':\n",
    "        break\n",
    "    else:\n",
    "        print(\"I'd love to visit: \"+city.title()+\".\")"
   ]
